<CardWindow>:
    name: "cardWin"
    theme_list: []
    current: 0
    listLength: 0
    cardLabel: cardLabel
    pageNumber: pageNumber
    cardImage: cardImage

    GridLayout:
        cols: 2

        Image:
            width: root.width * 0.7
            height: root.height
            id:cardImage
            source: 'Images/card.gif'
            allow_stretch: True
            keep_ratio: False

            Label:
                font_size: 20
                text_size: self.width, None
                width: root.width * 0.7
                height: root.height
                id: cardLabel
                color: 0,0,0,1
                text: ""
                halign: "center"
                valign: "middle"
                


        GridLayout:
            size_hint: 0.3 , 1
            cols: 1

            Button:
                text: "Back"
                on_release:
                    root.back()

            Button:
                text: "--->"
                on_release:
                    root.next()

            Label:
                id: pageNumber
                text: "Page Number"

            Button:
                text: "<---"
                on_release:
                    root.last()