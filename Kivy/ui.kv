
<SubjectWindow>:
    name: "SubjectWin"

    BoxLayout:
        orientation: "vertical"

        Button:
            text: "Maths"
            on_release:
                app.root.current = "MathsWin"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Further Maths"
            on_release:
                app.root.current = "FurtherMathsWin"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Computer Science"
            on_release:
                app.root.current = "CompSciWin"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Economics"
            on_release:
                app.root.current = "EconomicsWin"
                root.manager.transition.direction = "left"


